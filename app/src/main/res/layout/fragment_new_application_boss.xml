<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rt_elem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bossfragment.NewApplicationBossFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/new_appl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_appl"
        android:fontFamily="@font/inter"
        android:textColor="@color/black1"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sortRecycler"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/new_appl"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/r_view"
        android:layout_width="409dp"
        android:layout_height="650dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_below="@+id/sortRecycler"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/text_no_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/text_no_new"
        android:textSize="20sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black1" />

</RelativeLayout>