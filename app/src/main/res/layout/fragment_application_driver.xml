<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driverFragment.ApplicationDriverFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/my_timetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_timetable"
        android:textSize="30sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sortRecycler"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/my_timetable"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/r_view"
        android:layout_width="409dp"
        android:layout_height="650dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_below="@+id/sortRecycler"
        android:background="@color/white"
        android:layout_above="@+id/new_appl_button"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/text_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/text_no"
        android:textSize="20sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black1" />

    <Button
        android:id="@+id/new_appl_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black1"
        app:rippleColor="@color/black_ripple"
        app:cornerRadius="20dp"
        android:text="@string/new_appl_button"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>